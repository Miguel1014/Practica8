<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica8.Historial">
    <StackLayout Margin="9" BackgroundColor="White">
        <Label Text="Historial de tareas" FontSize="Large" HorizontalOptions="CenterAndExpand"></Label>
        <Grid>
            <Grid.ColumnDefinitions>


                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Label Text="Titulo" Grid.Column="0" Grid.Row="0"  BackgroundColor="Yellow"/>
            <Label Text="Area" Grid.Column="1" Grid.Row="0" BackgroundColor="Yellow"/>
            <Label Text="Nombre Tecnico" Grid.Column="2" Grid.Row="0" BackgroundColor="Yellow" />
            <Label Text="Fecha Limite" Grid.Column="3" Grid.Row="0" BackgroundColor="Yellow"/>
            <Label Text="Prioridad" Grid.Column="4" Grid.Row="0" BackgroundColor="Yellow"/>
            <Label Text="Status" Grid.Column="5" Grid.Row="0" BackgroundColor="Yellow"/>
            <Label Text="ID" Grid.Column="6" Grid.Row="0" BackgroundColor="Yellow"/>
        </Grid>
      
        <ListView x:Name="myListV" BackgroundColor="DarkMagenta" ItemsSource="{Binding Items}" CachingStrategy="RecycleElement" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="75">
                        <Grid>
                            <Grid.ColumnDefinitions>


                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>



                            <Label BackgroundColor="CadetBlue" Text="{Binding problema}" Grid.Column="0" Grid.Row="0" />
                            <Label Text="{Binding carea}" Grid.Column="1" Grid.Row="0" />
                            <Label Text="{Binding tecnico}" Grid.Column="2" Grid.Row="0" />
                            <Label Text="{Binding fecha_limite}" Grid.Column="3" Grid.Row="0" />
                            <Label Text="{Binding prioridad}" Grid.Column="4" Grid.Row="0" />
                            <Label Text="{Binding status}" Grid.Column="5" Grid.Row="0" />
                            <Label Text="{Binding id}" Grid.Column="6" Grid.Row="0" />


                        </Grid>

                    </ViewCell>

                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>
        

        

    </StackLayout>
</ContentPage>
